{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": [
        "arn:aws:logs:*:$${var.account_id}:log-group:*"
      ],
      "Condition": {
        "StringEquals": {
          "aws:ResourceTag/organization": "$${aws:ResourceTag/organization}"
        }
      }
    },
    {
      "Effect": "Allow",
      "Action": [
        "ssm:GetParameters"
      ],
      "Resource": [
        "arn:aws:ssm:*:$${var.account_id}:parameter*"
      ],
      "Condition": {
        "StringEquals": {
          "aws:ResourceTag/organization": "$${aws:ResourceTag/organization}"
        }
      }
    },
    {
      "Effect": "Allow",
      "Action": [
        "ssm:GetParameters"
      ],
      "Resource": [
        "arn:aws:ssm:*:$${var.account_id}:parameter/codebuild/matias/token"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "ecr:BatchGetImage"
      ],
      "Resource": [
        "arn:aws:ecr:*:$${var.account_id}:repository/xtages-build-images",
        "arn:aws:s3:::xtages-buildspecs/*"
      ]
    }
  ]
}
