{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": [
        "arn:aws:logs:*:${account_id}:log-group:*",
        "arn:aws:logs:*:${account_id}:log-group:*:log-stream:*"
      ],
      "Condition": {
        "StringEquals": {
          "aws:ResourceTag/organization": "$${aws:ResourceTag/organization}"
        }
      }
    },
    {
      "Effect": "Allow",
      "Action": [
        "ssm:GetParameters"
      ],
      "Resource": [
        "arn:aws:ssm:*:${account_id}:parameter*"
      ],
      "Condition": {
        "StringEquals": {
          "aws:ResourceTag/organization": "$${aws:ResourceTag/organization}"
        }
      }
    },
    {
      "Effect": "Allow",
      "Action": [
        "ssm:GetParameters"
      ],
      "Resource": [
        "arn:aws:ssm:*:${account_id}:parameter/codebuild/matias/token"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "ecr:BatchGetImage"
      ],
      "Resource": [
        "arn:aws:ecr:*:${account_id}:repository/xtages-build-images",
        "arn:aws:ecr:*:${account_id}:repository/node",
        "arn:aws:s3:::xtages-buildspecs${environment}/*",
        "arn:aws:s3:::xtages-infra-logs-${simple_env}/*"
      ]
    }
  ]
}
